<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Store</h1>
    <a class="btn btn-primary active" role="button" aria-pressed="true" href="/store/create">Add</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Title</th>
                <th scope="col">FullTitle</th>
                <th scope="col">Address</th>
                <th scope="col">Phone</th>
                <th scope="col">City</th>
                <th scope="col">Status</th>
                <th scope="col">StoreType</th>
                <th scope="col">Rating</th>
                <th scope="col">TimeOpen</th>
                <th scope="col">TimeClose</th>
                <th scope="col">MinPrice</th>
                <th scope="col">MaxPrice</th>
                <th scope="col">TimePrepare</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">UpdatedAt</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% result.forEach(function(type, count){ %>
                <tr>
                    <td scope="row"><%= count %></td>
                    <form action="/store/update" method="POST">
                        <input type="hidden" name="id" value="<%= type.id %>"/>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="title" value="<%= type.title %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="fullTitle" value="<%= type.fullTitle %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="address" value="<%= type.address %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="phone" value="<%= type.phone %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <select class="form-control" name="city">
                                    <% data.cities.forEach((city) => { %>
                                    <option value="<%= city.id %>"
                                    <% if(city.id == type.city) { %> selected <% } %>
                                    ><%= city.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <select class="form-control" name="status">
                                    <% data.status.forEach((status) => { %>
                                    <option value="<%= status.id %>"
                                    <% if(status.id == type.status) { %> selected <% } %>
                                    ><%= status.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <select class="form-control" name="storeType">
                                    <% data.storeType.forEach((storeType) => { %>
                                    <option value="<%= storeType.id %>"
                                    <% if(storeType.id == type.storeType) { %> selected <% } %>
                                    ><%= storeType.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="rating" value="<%= type.rating %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="timeOpen" value="<%= type.timeOpen %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="timeClose" value="<%= type.timeClose %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="minPrice" value="<%= type.minPrice %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="maxPrice" value="<%= type.maxPrice %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td>
                            <div class="input-group input-group-sm mb-3">
                                <input type="text" class="form-control" name="timePrepare" value="<%= type.timePrepare %>" aria-describedby="inputGroup-sizing-sm">
                            </div>
                        </td>
                        <td><%= type.createdAt %></td>
                        <td><%= type.updatedAt %></td>
                        <td>
                            <input type="submit" class="btn btn-sm btn-success" name="btnAction" value="Update"/>
                            <input type="submit" class="btn btn-sm btn-danger" name="btnAction" value="Delete"/>
                        </td>
                    </form>
                <tr>
            <% }) %>   
        </tbody>
    </table>
</div>